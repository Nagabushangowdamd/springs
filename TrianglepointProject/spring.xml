<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">


<beans>
<bean id="triangle" class="com.jspiders.springs.Triangle">  
<property name="pointA" ref="zeroPoint"></property>
<property name="pointB" ref="secondPoint"></property>
<property name="pointC" ref="thirdPoint"></property>

</bean>

<bean id="zeroPoint" class="com.jspiders.springs.Point">
<property  name="x" value="0"></property>
<property  name="y" value="0"></property>

</bean>

<bean id="secondPoint" class="com.jspiders.springs.Point">
<property  name="x" value="20"></property>
<property  name="y" value="0"></property>

</bean>

<bean id="thirdPoint" class="com.jspiders.springs.Point">
<property  name="x" value="0"></property>
<property  name="y" value="20"></property>

</bean>



</beans>
